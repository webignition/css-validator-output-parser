{
    "name": "webignition/css-validator-output-parser",
    "description": "Parser for output from the W3C CSS validator",
    "keywords": ["CSS", "validator", "parser"],
    "homepage": "https://github.com/webignition/css-validator-output-parser",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "jon@webignition.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\CssValidatorOutput\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\Tests\\CssValidatorOutput\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2.0",
        "webignition/url":">=2,<3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3"
    },
    "minimum-stability":"stable",
    "prefer-stable":true
}